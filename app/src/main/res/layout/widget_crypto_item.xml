<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_widget_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@color/widget_text_color"
        android:textSize="@dimen/material_typography_regular_title_text_size" />

    <TextView
        android:id="@+id/textview_widget_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/textview_widget_change_24h"
        android:textColor="@color/widget_text_color"
        android:textSize="@dimen/material_typography_regular_title_text_size" />

    <TextView
        android:id="@+id/textview_widget_change_24h"
        android:layout_width="@dimen/widget_change_24h_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/widget_change_24h_start_margin"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:textColor="@color/widget_text_color"
        android:textSize="@dimen/material_typography_regular_title_text_size" />

</RelativeLayout>